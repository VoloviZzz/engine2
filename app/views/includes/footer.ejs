	<footer class="document-footer">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-3 leta-logo">
					<a href="#">
						<img src="/img/leta-logo.png" alt="Лета-Индекс">
					</a>
				</div>
				<div class="col-md-6 copyright text-center">
					<% if(user.adminMode) { -%>
						<input class="js-set-siteConfig" style="height: 20px" data-target="footerText" type="text" name="footerText" placeholder="Введите текст для футера" value="<%= siteConfig.get('footerText') -%>">
					<% } else { -%>
						<span><%= siteConfig.get('footerText') -%></span>
					<% } -%>
				</div>
				<div class="col-md-3 footer-social">
					<% if(user.adminMode) { -%>
						<button class="btn btn-sm js-add-social-link">+</button>
					<% } -%>
					<% socialLinks.get().forEach((item) => { %>
						<a class="js-social-btn social-btn" href="<%= item.href -%>" title="<%= item.title -%>">
							<% if(user.adminMode) { -%>
								<div class="js-social-link-form" style="display: none">
									<button class="btn btn-sm js-socialLink-delete" data-id="<%= item.id -%>">Удалить</button>
									<input class="js-socialLink-edit" data-target="href" data-id="<%= item.id -%>" type="text" name="href" placeholder="Ссылка" value="<%= item.href -%>" style="width: 70px">
									<input class="js-socialLink-edit" data-target="title" data-id="<%= item.id -%>" type="text" name="title" placeholder="Заголовок" value="<%= item.title -%>" style="width: 70px">
									<input class="js-socialLink-edit" data-target="icon" data-id="<%= item.id -%>" type="text" name="icon" placeholder="Иконка" value="<%= item.icon -%>" style="width: 70px">
								</div>
							<% } -%>
							<i class="fa <%= item.icon ? item.icon : 'fa-question' -%>"></i>
						</a>	
					<% }) -%>
				</div>
			</div>
		</div>
	</footer>
	<script src="/vendors/jquery/jquery.min.js"></script>
	<script src="/vendors/ckeditor/ckeditor.js"></script>
	<script src="/vendors/ace/ace.js"></script>
	<script src="/vendors/ace/ext-textarea.js"></script>
	<script src="/vendors/bootstrap/dist/js/popper.min.js"></script>
	<script src="/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="/js/application.js"></script>
	<% if(!!user.adminMode === true) { -%>
		<script src="/admins/js/admin.js"></script>
	<% } -%>
	<% if(user.admin) { -%>
		<script src="/admins/js/toggle-admin.js"></script>
	<% } %>
</body>
</html>