<section>
	<h1 class="text-center">Категории</h1>
	<div class="goods-list">
		<div class="goods-list__items-wrapper">
			<% if(cats.length < 1) { %>
				<p>Категорий не найдено</p>
			<% } %>
			<% cats.forEach((cat, index) => { %>
				<div class="goods-list__item">
					<div class="goods-item__title">
						<span><%= cat.title %></span>
					</div>
					<div class="goods-item__img">
						<a href="/shop-categories/<%= cat.id -%>">
							<img src="<%= Helpers.replaceImageIfNotExist(cat.img) %>" alt="Категория">
						</a>
					</div>
					<div class="goods-item__price">
						<a href="/shop-categories/<%= cat.id -%>" class="btn">Перейти</a>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</section>
<section>
	<h1 class="text-center">Товары/услуги</h1>
	<div class="goods-list">
		<div class="goods-list__items-wrapper">
			<% if(poses.length < 1) { %>
				<p>Товаров или услуг не найдено</p>
			<% } %>
			<% poses.forEach((p, i) => { %>
				<div class="goods-list__item">
					<div class="goods-item__title">
						<span><%= p.title %></span>
					</div>
					<div class="goods-item__img">
						<a href="/product/<%= p.id -%>">
							<img src="<%= Helpers.replaceImageIfNotExist(`${p.photo_path}/preview/${p.photo_name}`) %>" alt="Товары">
						</a>
					</div>
					<div class="goods-item__price">
						<% if(p.float_price) { %>
							<span style="text-transform: none;">От</span>
							<span><%= Helpers.formatPrice(p.price) %> руб.</span>
						<% } else if(p.contract_price) { %>
							<span style="text-transform: none;">Договорная</span>
						<% } else { %>
							<span><%= Helpers.formatPrice(p.price) %> руб.</span>
						<% } %>
						<a href="/product/<%= p.id -%>" class="btn">Открыть</a>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</section>