<div class="news content">
	<% if(user.adminMode) { %>
		<div class="admin-control-container">
			<button data-id="<%= news.id -%>" class="btn news-delete js-news-delete">Удалить</button>
			<% if(news.public) { %>
				<button data-id="<%= news.id -%>" data-value="0" class="btn news-publicate js-news-togglePublication">Снять с публикации</button>
			<% } else { %>
				<button data-id="<%= news.id -%>" data-value="1" class="btn news-publicate js-news-togglePublication">Публиковать</button>
			<% } %>
			<label class="btn news-change-photo">
				<input type="file" class="js-news-upload-mainphoto" data-id="<%= news.id -%>" id="news-upload-mainphoto" style="display: none">
				<span>Изменить фото</span>
			</label>
		</div>
	<% } %>
	<% if(user.adminMode) { %>
		<span>Заголовок:</span>
		<input class="input-text js-news-update" type="text" data-target="title" data-id="<%= news.id -%>" value="<%= news.title -%>">
		<span>Подзаголовок:</span>
		<input class="input-text js-news-update" type="text" data-target="subtitle" data-id="<%= news.id -%>" value="<%= news.subtitle -%>">
	<% } %>
	<div class="news__news-right">
		<div class="text-center">
			<h2>
				<em><%= news.subtitle -%></em>
			</h2>
		</div>
		<div class="news__news-text text-indent_p text-margin-bottom-p">
			<% if(user.adminMode) { %>
				<textarea data-target="text" data-id="<%= news.id -%>" class="js-news-update js-ckeditor-edit"><%- news.text -%></textarea>
			<% } else { %>
				<%-news.text-%>
			<% } %>
		</div>
	</div>
</div>
<% if(user.adminMode) { %>
	<script src="/admins/js/news-list.js" defer></script>
	<script src="/admins/js/news-id.js" defer></script>
<% } %>