<% var level = level|| 0;%>

<ul class="section-menu fs-regular">
	<% for(let id in catsTree) { %>
		<% var s = catsTree[id]%>
		<li class="section-menu-item">
			<a href="./<%= s.id %>" style="width: 100%; padding-left: <%= 20 * level%>px">
				<p><%=s.title%></p>
			</a>
			<% if(!!catsTree[id]['childs'] === true) { %>
				<%- include('./template.ejs', {catsTree: catsTree[id]['childs'], level: level + 1}) %>
			<% } %>
		</li>
	<% } %>
</ul>