<section style="margin-bottom: 20px">
	<form class="js-add-globalVariables--form">
		<div class="form-group">
			<h1>Добавить новую переменную</h1>
		</div>
		<div class="form-group">
			<label>
				<span>Заголовок:</span>
				<input type="text" name="title">
			</label>
		</div>
		<div class="form-group">
			<label>
				<span>Название (для программистов):</span>
				<input type="text" name="target">
			</label>
		</div>
		<div class="form-group">
			<span>Значение:</span>
			<input type="text" name="value">
		</div>
		<div class="form-group">
			<button class="btn">Добавить</button>
		</div>
	</form>
</section>
<section>
	<div class="form-group">
		<h1>Список настроек</h1>
	</div>
	<% settings.forEach((s) => { %>
		<form>
			<div class="form-group">
				<span><%= s.title -%>: </span>
				<input type="text" value="<%= s.value -%>">
			</div>
		</form>
	<% }) %>
</section>
<script src="/js/globalConfig.js" defer></script>