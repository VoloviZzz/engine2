<section style="margin-bottom: 20px">
	<form class="js-add-globalVariables--form">
		<div class="form-group">
			<h1>Добавить новую переменную</h1>
		</div>
		<div class="form-group">
			<label>
				<span>Заголовок:</span>
				<input type="text" name="title">
			</label>
		</div>
		<div class="form-group">
			<label>
				<span>Название (для программистов):</span>
				<input type="text" name="target">
			</label>
		</div>
		<div class="form-group">
			<span>Значение:</span>
			<input type="text" name="value" id="js-globalVariable-value-title">
			<span>или фото:</span>
			<input type="file" name="upload" id="js-globalVariable-image-upload">
		</div>
		<div class="form-group">
			<button class="btn">Добавить</button>
		</div>
	</form>
</section>
<section>
	<div class="form-group">
		<h1>Список настроек</h1>
	</div>
	<% settings.forEach((s) => { %>
		<div class="form-group">
			<span><%= s.title -%> </span>
			<span><b>(<%= s.target -%>)</b>: </span>
			<span><%= s.value -%></span>
			<button class="btn js-variable-delete" data-id="<%= s.id -%>">X</button>
		</div>
	<% }) %>
</section>
<script src="/admins/js/globalConfig.js" defer></script>