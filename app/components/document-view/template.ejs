<link rel="stylesheet" href="/css/document-view.css">
<div id="all" class="menu-sections menu-sections__default">
	<% if(user.adminMode) { %>
		<div class="admin-control-container">
			<button data-id="<%= document.id %>" class="btn js-documents-delete">Удалить</button>
			<% if(document.public) { %>
				<button value="0" data-id="<%= document.id %>" class="btn js-documents-toggle-public">Снять с публикации</button>
			<% }
			else { %>
				<button value="1" data-id="<%= document.id %>" class="btn js-documents-toggle-public">Опубликовать</button>
			<% } %>
		</div>
	<% } %>
	<% if(user.adminMode) { %>
		<input data-id="<%= document.id %>" type="text" class="input-text js-documents-title-update" value="<%= document.title %>">
	<% }
	else { %>
		<h1 class="document-title"><%= document.title %></h1>
	<% } %>
	<% if(user.adminMode) { %>
		<textarea class="js-ckeditor-edit" name="" id="" cols="30" rows="10"><%- Helpers.replaceLineBreaks(document.text) %></textarea>
	<% } %>
	<div data-id="<%= document.id %>" class="document-text text-margin-bottom-p text-indent">
		<%- Helpers.replaceLineBreaks(document.text) %>
	</div>
</div>
<% if(user.adminMode) { %>
	<script src="/admins/js/documents-list.js" defer></script>
<% } %>