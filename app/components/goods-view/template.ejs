<link rel="stylesheet" href="/css/goods-view.css">
<link rel="stylesheet" href="/vendors/baguettebox.js/dist/baguetteBox.min.css">
<link rel="stylesheet" href="/vendors/flexSlider/flexslider.css">
<div>
	<% if(user.adminMode) { %>
		<%- include("./settings") -%>
	<% } %>
	<div>
		<% try { %>
			<%- include("./goods.ejs") -%>
		<% } catch(error) { %>
			<pre><%= error.message -%></pre>
		<% } %>
	</div>
</div>

<style>
	.btn-block {
		display: block;
	}
	
	/* items list */
	
	.items-list {
	}
	.items-list li {
		display: inline-block;
		vertical-align: top;
	}
	.items-list-img-cnt {
		width: 100%;
		height: 250px;
		display: table;
	}
	.items-list-img-cnt > div {
		display: table-cell;
		vertical-align: middle;
	}
	.items-list img {
		width: 100%;
		height: auto;
	}
	.items-list li .btn {
		margin: 1em;
	}
	
	.goods-list li {
		position: relative;
	}
	.goods-list li small {
		display: block;
		text-align: right;
		color: green;
	}
	.goods-list-price {
		position: absolute;
		top: 30px;
		right: 10px;
		font-size: 24px;
		background: #000;
		color: #fff;
		padding: 5px;
	}
	
	.similar-list li {
		width: 25%;
		paddin: 30px;
	}
	
</style>

<section class="similar-positions">
	<h3>Похожие позиции</h3>
	<ul class="items-list goods-list similar-list"><%
		
		similarPositions.forEach((pos) => {
		
			var img = pos.preview_path ? pos.preview_path : "/img/image-not-found.jpg";
			
			%><li>
				<h4>
					<a href="<%= pos.id -%>"><%-pos.title%></a>
				</h4>
				<div class="goods-list-price">??? <span class="fa fa-rouhle"></span></div>
				<div class="items-list-img-cnt">
					<div>
						<img src="<%= img -%>" alt="">
					</div>
				</div>
			</li><%
		})
		
	%></ul>
</section>

<script src="/vendors/baguettebox.js/dist/baguetteBox.min.js" defer></script>
<script src="/vendors/flexSlider/jquery.flexslider-min.js" defer></script>
<script src="/js/goods-view.js" defer></script>
<% if(user.adminMode) { %>
	<script src="/admins/js/goods-view.js" defer></script>
<% } %>